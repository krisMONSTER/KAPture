<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SettingsFragment">

    <EditText
        android:id="@+id/delayEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="140dp"
        android:hint="@string/choose_delay"
        android:textColor="@color/colorDetail"
        android:textColorHint="@color/colorDetail"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/indicator1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/indicator1"
        android:layout_width="7dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="161dp"
        android:background="@drawable/indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chooseAlarmSoundText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/durationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:hint="@string/choose_duration"
        android:textColor="@color/colorDetail"
        android:textColorHint="@color/colorDetail"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/indicator2"
        app:layout_constraintTop_toBottomOf="@+id/delayEditText" />

    <View
        android:id="@+id/indicator2"
        android:layout_width="7dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/indicator"
        app:layout_constraintEnd_toStartOf="@+id/durationEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator1" />

    <EditText
        android:id="@+id/chooseAlarmSoundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:hint="@string/choose_alarm_sound"
        android:textColor="@color/colorDetail"
        android:textColorHint="@color/colorDetail"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/indicator2"
        app:layout_constraintTop_toBottomOf="@+id/durationEditText" />

    <View
        android:id="@+id/indicator3"
        android:layout_width="7dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/indicator"
        app:layout_constraintEnd_toStartOf="@+id/durationEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator2" />

</androidx.constraintlayout.widget.ConstraintLayout>